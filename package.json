  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:server": "npm --prefix=server run start",
    "dev:client": "npm --prefix=client run dev",
    "dev": "npx npm-run-all --parallel dev:server dev:client",
    "dev-server:install": "npm --prefix=server install",
    "dev-client:install": "npm --prefix=client install",
    "install": "npm-run-all --parallel dev-server:install dev-client:install",
    "format": "prettier --write .",
    "lint-staged:client": "npm --prefix=client run lint:staged",
    "lint-staged:server": "npm --prefix=server run lint:staged",
    "lint-staged": "npm-run-all lint-staged:client lint-staged:server",
    "prepare": "husky install"
  },
